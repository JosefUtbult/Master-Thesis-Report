% Define colors for various elements in the document
% If DARKMODE is defined, the color scheme will be dark. Otherwise, default
\ifdefined\DARKMODE
    \definecolor{DarkBackground}{HTML}{1e1e1e}
    \definecolor{DarkText}{HTML}{c8c8c8}
	
	\def\BackgroundColor{DarkBackground}
	\def\TextColor{DarkText}
	\def\HighlightColor{DarkOrange}
	\def\URLColor{DarkOrange}

\else
	\def\BackgroundColor{White}
	\def\TextColor{Black}
	\def\HighlightColor{Chartreuse}
	\def\URLColor{DarkSlateGray}
\fi

% Set page and text color
\pagecolor{\BackgroundColor}
\color{\TextColor}

\hypersetup{
	colorlinks=true,
	linkcolor=\TextColor,
	filecolor=\TextColor,      
	urlcolor=\URLColor,
	citecolor=\TextColor,
}

\bibliographystyle{LTU-Report-Theme/IEEEtran}

% Set url colors
\hypersetup{
	colorlinks=true,
	linkcolor=\TextColor,
	filecolor=\TextColor,      
	urlcolor=\URLColor,
	citecolor=\TextColor,
}

% Redefine the preamble command to automatically include the correct LTU logo
\newcommand{\createpreamble}[7]{
\startpreamble
	{#1}
	{#2}
	{#3}
	{#4}
	{#5}
	{#6}
	{#7}
	{
		\ifdefined\DARKMODE
			\ifdefined\HIGHRES
				\includegraphics[width=0.4\textwidth]{LTU-Report-Theme/img/ltu_logo_en_dark_highres.png}
			\else
				\includegraphics[width=0.4\textwidth]{LTU-Report-Theme/img/ltu_logo_en_dark.png}
			\fi
		\else
			\ifdefined\HIGHRES
				\includegraphics[width=0.4\textwidth]{LTU-Report-Theme/img/ltu_logo_en_light_highres.png}
			\else
				\includegraphics[width=0.4\textwidth]{LTU-Report-Theme/img/ltu_logo_en_light.png}
			\fi
		\fi
	}
}

% Redefine the todo command to get a nice look
\let\oldtodo\todo
\renewcommand{\todo}[1]{
	\renewcommand{\@todonotes@bordercolor}{\BackgroundColor}
	\oldtodo[inline, color=\HighlightColor]{#1}
}

